<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jobportalcorporate">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Job Portal Corporate"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".ForgetPasswordActivity" />
        <activity
            android:name=".ProfileActivity"
            android:label="Job Portal Corporate"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".UploadJob" />
        <activity android:name=".CandidateProfile" />
        <activity android:name=".PostedJob" />
        <activity android:name=".AppliedCandidates"></activity>
    </application>

</manifest>